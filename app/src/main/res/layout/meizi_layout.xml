<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/toolbar_meizi"
        layout="@layout/toolbar"></include>
    <android.support.v7.widget.CardView
        android:layout_below="@id/toolbar_meizi"
        android:id="@+id/card_view_meizi_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/detail_meizi"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/image_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="18sp"
        android:text="hello"
        android:layout_below="@id/card_view_meizi_detail"
        />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        >
        <Button
            android:id="@+id/like_meizi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_selector"
            android:textColor="@color/text_btn_selector"
            android:text="喜欢"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/share_meizi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:background="@drawable/bg_btn_selector"
            android:textColor="@color/text_btn_selector"
            android:text="分享"
            />
        <Button
            android:id="@+id/load_meizi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:background="@drawable/bg_btn_selector"
            android:textColor="@color/text_btn_selector"
            android:text="下载"
            />
    </LinearLayout>
</RelativeLayout>